# Puerto del servidor
PORT=3000

# Base de datos (para SQLite no necesitas estas, pero útil para PostgreSQL en producción)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=pc_store
DB_USER=postgres
DB_PASSWORD=password

# JWT Configuration - CRÍTICO: CAMBIA ESTO EN PRODUCCIÓN
# Para generar un secreto seguro, ejecuta: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=CAMBIAME_ESTE_ES_INSEGURO_GENERA_UNO_NUEVO_CON_CRYPTO
JWT_EXPIRES_IN=24h

# Entorno (development o production)
NODE_ENV=development

# Nivel de logging (error, warn, info, http, debug)
LOG_LEVEL=debug

# Frontend URL (para CORS)
FRONTEND_URL=http://localhost:5173

# Google OAuth (opcional)
GOOGLE_CLIENT_ID=tu_google_client_id_aqui
GOOGLE_CLIENT_SECRET=tu_google_client_secret_aqui
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback